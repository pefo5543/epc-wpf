<UserControl x:Class="EpcDashboard.CommonUserInterface.CustomControls.NewActionBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EpcDashboard.CommonUserInterface.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid Margin="10,5,5,5"
          HorizontalAlignment="Right">
        <Button Content="New Action"
                Background="LightSkyBlue"
                Command="{Binding AddActionCommand}"
                Height="35"
                Width="75" />
    </Grid>
</UserControl>
